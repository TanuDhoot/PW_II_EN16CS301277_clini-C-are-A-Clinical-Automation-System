@model ClinicalAutomationSystem.Models.SalesDataModel

@{
    ViewBag.Title = "Admin | clini-C-are";
}

<div class="container-fluid">
    <br />
    <div class="col-lg-4" style="float:left; width:20%; height:auto; ">
        @{ Html.RenderPartial("_MenuAdmin");}
    </div>
    <div class="col-lg-12" style="float:right; width:80%; padding-left:40px; ">
        <h2 class="col-md-offset-4"> View Salesperson </h2>
        <hr />
        @using (Html.BeginForm("ViewSalesperson", "Admin"))
        {
            <div>
                <br />
                <table border="1" class="table col-lg-12 table-bordered table-condensed text-center">
                    <tr>
                        <th class="text-center"> Salesperson Name </th>
                        <th class="text-center"> E-mail ID </th>
                        <th class="text-center"> Current Status </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.ListSalesperson)
                    {
                        <tr>
                            <td> @item.FirstName &nbsp; @item.LastName </td>
                            <td> @item.EmailID </td>
                            <td> @item.CurrentStatus </td>
                            <td>
                                <button class="btn btn-sm btn-danger" onclick="location.href = '@Url.Action("DeleteUser", "Admin", new { id = item.SalespersonID, str = "Salesperson" })'; return false;">Block</button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        <br />
