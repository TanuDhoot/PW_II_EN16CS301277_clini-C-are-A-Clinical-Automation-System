@model ClinicalAutomationSystem.Models.InboxDataModel

@{
    ViewBag.Title = "Physician | clini-C-are";
}

<div class="container-fluid">
    <br />
    <div class="col-lg-4" style="float:left; width:30%; height:auto; ">
        @{ Html.RenderPartial("_MenuPhysician");}
    </div>
    <div class="col-lg-12" style="float:right; width:70%; padding-left:40px; ">
        <h2 class="col-md-offset-4"> Inbox </h2>
        <hr />
        @using (Html.BeginForm("SendMessages", "Physician"))
        {
            <div class="form-horizontal">
                <br />
                <div class="form-group">
                    <label class="control-label col-md-4"> Subject </label>
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                    </div>
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4"> Message Details </label>
                    <div class="col-md-3">
                        @Html.TextAreaFor(m => m.MessageDetail, new { @class = "form-control" })
                    </div>
                    <div class="col-md-5">
                        @Html.ValidationMessageFor(m => m.MessageDetail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br /> <br />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Send" class="btn btn-success" />
                    </div>
                </div>
                <br /> <br />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <label class="text-success"> @ViewBag.text</label>
                    </div>
                </div>
            </div>
        }
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
