@model ClinicalAutomationSystem.Models.AppointmentDataModel

@{
    ViewBag.Title = "Physician | clini-C-are";
}

<div class="container-fluid">
    <br />
    <div class="col-lg-4" style="float:left; width:20%; height:auto; ">
        @{ Html.RenderPartial("_MenuPhysician");}
    </div>
    <div class="col-lg-12" style="float:right; width:80%; padding-left:25px; ">
        <h2 class="col-md-offset-5"> View Appointments </h2>
        <hr />
        @using (Html.BeginForm("ViewAppointment", "Physician"))
        {
            <div>
                <br />
                <table border="1" class="table col-lg-12 table-bordered table-condensed text-center">
                    <tr>
                        <th class="text-center"> Patient Name </th>
                        <th class="text-center"> Gender </th>
                        <th class="text-center"> Subject </th>
                        <th class="text-center"> Description </th>
                        <th class="text-center"> Appointment Date </th>
                        <th class="text-center"> Appointment Status </th>
                    </tr>
                    @foreach (var item in Model.ListData)
                    {
                        <tr>
                            <td> @item.PatientName  </td>
                            <td> @item.PatientGender  </td>
                            <td> @item.Subject  </td>
                            <td> @item.Description  </td>
                            <td> @item.AppointmentDate  </td>
                            @if (item.AppointmentStatus == "Requested")
                            {
                                <td class="col-md-3">
                                    <button class="btn btn-sm btn-success" onclick="location.href = '@Url.Action("UpdateAppointment", "Physician", new { id = item.AppointmentID, str="Accept"})'; return false;">Accept</button>
                                    &nbsp; &nbsp;
                                    <button class="btn btn-sm btn-danger" onclick="location.href = '@Url.Action("UpdateAppointment", "Physician", new { id = item.AppointmentID, str="Reject"})'; return false;">Reject</button>
                                </td>
                            }
                            else
                            {
                                <td> @item.AppointmentStatus  </td>
                            }
                        </tr>
                    }
                </table>
            </div>
        }
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
</div>


